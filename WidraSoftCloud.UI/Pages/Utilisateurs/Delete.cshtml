@page "{id:int}"
@model WidraSoftCloud.UI.Pages.Utilisateurs.DeleteModel

@{
    ViewData["Title"] = "Supprimer";
}

<h1>Supprimer</h1>

<h3>Etes vous sur de vouloir supprimer cet utilisateur?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur.DateEntree)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.DateEntree)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur.Login)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.Login)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.Password)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Utilisateur.Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a style="color: #0bb963" asp-page="./Index">Retour à la liste</a>
    </form>
</div>
